{
    "name": "markup/contentful-bundle",
    "description": "A Symfony2 bundle to integrate with the Contentful APIs (Content Delivery and Content Management) for PHP 5.4+.",
    "keywords": ["contentful", "cms"],
    "type": "symfony-bundle",
    "licence": "MIT",
    "authors": [
        {
            "name": "Douglas Greenshields",
            "email": "douglas@usemarkup.com"
        },
        {
            "name": "Markup",
            "homepage": "http://www.usemarkup.com/"
        }
    ],
    "require": {
        "symfony/console": "~2.3",
        "symfony/framework-bundle": "~2.3",
        "markup/contentful": "dev-master",
        "psr/cache": "@dev"
    },
    "require-dev": {
        "phpunit/phpunit": "4.1.*"
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/Crell/Cache.git"
        }
    ],
    "autoload": {
        "psr-4": { "Markup\\ContentfulBundle\\": "src/" }
    }
}
